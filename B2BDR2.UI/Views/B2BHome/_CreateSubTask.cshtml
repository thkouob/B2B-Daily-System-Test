<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="createSubTaskLabel">Create Sub Task</h4>
        </div>
        <div class="modal-body">
            <form role="form" class="ng-pristine ng-valid">
                <div class="row">
                    <div class="col-lg-4">

                        <div class="form-group">
                            <input type="text" class="form-control" list="listMembers" maxlength="20" placeholder="Assignee" />
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group form-inline">
                            <input type="checkbox" id="cb_modalBatchEdit_UI"><label for="cb_modalBatchEdit_UI">&nbsp;UI</label>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="from-group">
                            <input type="checkbox" id="cb_modalBatchEdit_Service"><label for="cb_modalBatchEdit_Service">&nbsp;Service</label>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="from-group">
                            <input type="checkbox" id="cb_modalBatchEdit_Test"><label for="cb_modalBatchEdit_Test">&nbsp;Test</label>

                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="from-group">
                            <button type="button" class="btn btn-sm btn-default"><i class="fa fa-plus"></i></button>
                        </div>
                    </div>
                </div>                
            </form>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Add {{PBs}} sub task as follow:
                </div>
                <div class="panel-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>SubTask</th>
                                <th>Assignee</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{UI}}</td>
                                <td>{{Sean.Z.Chen}}</td>
                            </tr>
                            <tr>
                                <td>{{Service}}</td>
                                <td>{{Jarvis.C.Huang}}</td>
                            </tr>
                            <tr>
                                <td>{{Test}}</td>
                                <td>{{Jarvis.C.Huang}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>
</div>

