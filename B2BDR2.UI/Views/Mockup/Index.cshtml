@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMockup.cshtml";
}

@section scripts{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/Demo.js"></script>
}
<style>
    /*調整Status Icon的顏色*/
    .fa-check:before {
        color: green;
    }

    .fa-spinner:before {
        color: orange;
    }

    /*調整Table的排序箭頭*/
    table.dataTable thead .sorting_desc:after,
    table.dataTable thead .sorting_asc:after,
    table.dataTable thead .sorting:after {
        content: "";
    }

    /*隱藏Status欄位內用於排序的資料*/
    td span {
        display: none;
    }

    td.center {
        text-align: center;
    }
</style>

<div ng-app="mvcapp">
    <div ng-controller="indexCtrl">

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Project Status</h1>
                </div>
                <div class="col-lg-12">
                    <div class="col-lg-3 pull-right">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="q" ng-model="SearchVal">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="button" ng-click="RemoveSearchVal()"><i class="glyphicon glyphicon-remove"></i></button>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Project#</th>
                                <th>Project Name</th>
                                <th>SM</th>
                                <th>SMUID</th>
                                <th>Created Date</th>
                                <th>JIRA Status</th>
                                <th>DR Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in DataList | filter:SearchVal">
                                @*ng-class="$index % 2 == 0 ? 'odd' : 'even'"*@
                                <td>{{item.ProjectNumber}}</td>
                                <td>{{item.ProjectName}}</td>
                                <td>{{item.SMName}}</td>
                                <td>{{item.SMName|fullToUidName}}</td>
                                <td>{{uid|uidToFullName}}</td>
                                <td class="center">{{item.CreateDate}}</td>
                                <td class="center" ng-bind-html="GetTdClass(item.JIRAStatus)"></td>
                                <td class="center" ng-bind-html="GetTdClass(item.DRStatus)"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="pull-right">
                <nav>
                    <ul class="pagination">
                        <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
                        <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                        <li><a href="#">2</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- /.container-fluid -->

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Project Status</h1>
                </div>
                <div class="col-lg-12">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Project#</th>
                                    <th>Project Name</th>
                                    <th>SM</th>
                                    <th>Created Date</th>
                                    <th>JIRA Status</th>
                                    <th>DR Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd">
                                    <td>12815</td>
                                    <td>B2B_WWW Newkit phase I</td>
                                    <td>Sean.Z.Chen</td>
                                    <td class="center">2015/12/19</td>
                                    <td class="center"><p class="fa fa-spinner" /><span>x</span></td>
                                    <td class="center"><p class="fa fa-check" /><span>v</span></td>
                                </tr>
                                <tr class="even">
                                    <td>12778</td>
                                    <td>B2B_WWW 2016 CW 2-4:BOM Phase III & Prodcut Fix</td>
                                    <td>Jac.T.Wang</td>
                                    <td class="center">2015/12/18</td>
                                    <td class="center"><p class="fa fa-check" /><span>v</span></td>
                                    <td class="center"><p class="fa fa-check" /><span>v</span></td>
                                </tr>
                                <tr class="odd">
                                    <td>12777</td>
                                    <td>B2B_WWW Newkit phase II</td>
                                    <td>Sean.Z.Chen</td>
                                    <td class="center">2015/12/17</td>
                                    <td class="center"><p class="fa fa-check" /><span>v</span></td>
                                    <td class="center"><p class="fa fa-spinner" /><span>x</span></td>
                                </tr>
                                <tr class="even">
                                    <td>12776</td>
                                    <td>B2B_WWW 2016 CW 2-3:BOM Phase II</td>
                                    <td>Jac.T.Wang</td>
                                    <td class="center">2015/12/16</td>
                                    <td class="center"><p class="fa fa-check" /><span>v</span></td>
                                    <td class="center"><p class="fa fa-check" /><span>v</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->

    </div>
</div>

