@{
    ViewBag.Title = "Create Project";
    Layout = "~/Views/Shared/_MockupLayout.cshtml";
}

@section scripts{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/Scrum/CpStellaTest.js"></script>
    <link href="@Url.Content("~/Content/Scrum/CpStellaTest.css")" rel="stylesheet" />
}

<div class="container-fluid" ng-app="jiraApp" ng-controller="JiraCtrl">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Create Project</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <div class="panel-body">
                    <form role="form" class="ng-pristine ng-valid" ng-submit="Save()">

                        <!-- Basic Info -->
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Project No</label>
                                    <input class="form-control" maxlength="5" placeholder="9527" ng-model="AllFormData.ProjectNumber" />
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Project Name</label>
                                    <input class="form-control" maxlength="200" placeholder="" ng-model="AllFormData.ProjectName" />
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Dev Gruop</label>
                                    <div></div>
                                    <label class="radio-inline">
                                        <input type="radio" name="optionsDevGroup" id="optionsDevGruop1" value="1" ng-model="AllFormData.DevGruop" />WWW
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="optionsDevGroup" id="optionsDevGruop2" value="2" ng-model="AllFormData.DevGruop" />SSL
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Scrum Master</label>
                                    <input class="form-control" list="listMembers" maxlength="20" placeholder="" ng-model="SmName" />
                                    <!-- List Data -->
                                    <datalist id="listMembers">
                                        <option ng-repeat="m in MembersList" value="{{m.Name}}">{{m.UID}}</option>
                                    </datalist>
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                        <!-- Date -->
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Start Day</label>
                                    <input class="form-control" type="date" maxlength="10" ng-model="AllFormData.StartDate" />
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Release Day</label>
                                    <input class="form-control" type="date" maxlength="10" ng-model="AllFormData.ReleaseDate" />
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Launch Day</label>
                                    <input class="form-control" type="date" maxlength="10" ng-model="AllFormData.LaunchDate" />
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->

                        <h2 class="SelectBL">Select Back Log</h2>
                        <!-- Back log PB list-->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <table class="table table-hover">
                                            <tbody>
                                                <tr id="{{u.Id}}" ng-click="SelectedProjectLog($index)" ng-repeat="u in BacklogList">
                                                    <td>{{u.Key}}</td>
                                                    <td>{{u.Summary}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- /.panel -->
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        <!-- /.row -->

                        <h2 class="EditST">Edit Sub Task</h2>
                        <div class="row">
                            <div class="col-lg-12">
                                <!-- /.SubTaskTagArea -->
                                <ul class="nav nav-tabs">
                                    <li ng-repeat="b in ProjectList" class="{{b.Active}}" ng-click="UpdateActiveClass($index)">

                                        <a href="#{{b.Key}}" data-toggle="tab">
                                            {{b.Key}}&nbsp;&nbsp;&nbsp;<i class="fa fa-times" ng-click="RemoveProjectLog($index)"></i>
                                        </a>
                                    </li>
                                </ul>
                                <!-- /.SubTaskTagArea -->

                                <div class="tab-content">
                                    <div class="tab-pane fade {{b.Active}}" id="{{b.Key}}" ng-repeat="b in ProjectList">

                                        <div class="panel panel-default">
                                            <!-- /.SubTaskTitleArea -->
                                            <div class="panel-heading">
                                                <div class="btn-group pull-right">

                                                    <button type="button" class="btn btn-default glyphicon glyphicon-plus" ng-click="addAreaDisplay=true;"></button>

                                                </div>
                                                <h4>{{b.Title}}</h4>
                                            </div>
                                            <!-- /.SubTaskTitleArea -->
                                            <div class="panel-body">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>NO.</th>
                                                            <th>Role</th>
                                                            <th>Assignee</th>
                                                            <th></th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!-- /.SubTaskDisplayArea -->
                                                        <tr ng-repeat="s in b.Subtask">
                                                            <td>{{$index+1}}</td>
                                                            <td>{{s.Role}}</td>
                                                            <td>
                                                                <tags-input ng-model="s.Assign" class="cpsStyle" placeholder="Add a Assignee" display-property="Name"
                                                                            replace-spaces-with-dashes="false" add-from-autocomplete-only="true">
                                                                    <auto-complete source="LoadAssigneeTag($query)" min-length="0" load-on-focus="true"
                                                                                   load-on-empty="true" max-results-to-show="32" template="AssignMemberListTemplate"></auto-complete>
                                                                </tags-input>
                                                                <!-- /.Assignee member List -->
                                                                <script type="text/ng-template" id="AssignMemberListTemplate">
                                                                    <div class="right-panel">
                                                                        <span ng-bind-html="$highlight($getDisplayText())"></span>
                                                                        <span>({{data.UID}})</span>
                                                                    </div>
                                                                </script>
                                                            </td>
                                                            <td>
                                                                <p></p>
                                                            </td>
                                                            <td class="text-center">
                                                                <i class="fa fa-times-circle" ng-click="RemoveSubTask(s.Id, $index)"></i>
                                                            </td>
                                                        </tr>
                                                        <!-- /.SubTaskDisplayArea -->
                                                        <!-- /.SubTaskAddArea -->
                                                        <tr>
                                                            <td>
                                                                <div ng-hide="addAreaDisplay"></div>
                                                                <div ng-show="addAreaDisplay">
                                                                    <i class="glyphicon glyphicon-exclamation-sign" ng-click="RemoveSubTask($index)"></i>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div ng-hide="addAreaDisplay"></div>
                                                                <div ng-show="addAreaDisplay">
                                                                    <label class="radio-inline">
                                                                        <input type="radio" name="optionsRoleGroup" id="optionsRoleGruop1" value=3 ng-model="Role" />UI
                                                                    </label>
                                                                    <label class="radio-inline">
                                                                        <input type="radio" name="optionsRoleGroup" id="optionsRoleGroup2" value=2 ng-model="Role" />Service
                                                                    </label>
                                                                    <label class="radio-inline">
                                                                        <input type="radio" name="optionsRoleGroup" id="optionsRoleGroup3" value=1 ng-model="Role" />Test
                                                                    </label>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div ng-hide="addAreaDisplay"></div>
                                                                <div ng-show="addAreaDisplay">
                                                                    <input class="form-control" maxlength="20" placeholder="" ng-model="NewAssignee" />
                                                                </div>
                                                            </td>
                                                            <td class="text-right">
                                                                <div ng-hide="addAreaDisplay"></div>
                                                                <div ng-show="addAreaDisplay">
                                                                    <button type="button" class="btn btn-default fa fa-plus-circle" ng-click="AddSubTask(b.Id, Role, NewAssignee, $index)" style="font-size:larger;"></button>
                                                                </div>
                                                            </td>
                                                            <td class="text-center">
                                                                <div ng-hide="addAreaDisplay"></div>
                                                                <div ng-show="addAreaDisplay">
                                                                    <i class="fa fa-times-circle" ng-click="addAreaDisplay=false;"></i>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <!-- /.SubTaskAddArea -->
                                                        <tr></tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.one -->

                            </div>
                        </div>
                        <!-- /.row -->

                        <div class="row">
                            <div class="col-lg-12">
                                <button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#modalCreateProjectConfirm" ng-click="OpenPopUp()">
                                    Create
                                </button>
                            </div>
                        </div>
                        <!-- /.row -->

                    </form>
                </div>
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
        <div class="modal fade" id="modalCreateProjectConfirm" tabindex="-1" role="dialog" aria-labelledby="modalCreateProjectConfirmLabel">
            @Html.Partial("_CpconfirmStellaTest")
        </div>
    </div>
    <!-- /.row -->
</div>

